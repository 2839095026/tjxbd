
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>欢迎使用Bette伯乐人力资源管理系统</title>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/jquery-easyui-1.3.5/jquery.min.js"></script>
    <script src="~/jquery-easyui-1.3.5/jquery.easyui.min.js"></script>
    <link href="~/jquery-easyui-1.3.5/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.3.5/themes/icon.css" rel="stylesheet" />
    <script src="~/jquery-easyui-1.3.5/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript">
    $(function () {
            $('#tt').tree({
                url: 'Meuneasyui',
                onClick: function (node) {
                    var text = node.text;
                    var url = node.PermissionsUrl;
                    if (url != null) {
                        //页面级
                        //如果页面有，就选中，否则就添加
                        if ($("#tabs").tabs('exists', text)) {
                            $("#tabs").tabs('select', text)
                        } else {
                            $('#tabs').tabs('add', {
                                title: text,
                                content: '<iframe src=/' + url + ' width="1160px" height="500px" />',
                                closable: true,
                                tools: [{
                                    iconCls: 'icon-mini-refresh',
                                    handler: function () {
                                        var tab = $('#tabs').tabs('getSelected');
                                        tab.find('iframe').attr('src', '/'+url);

                                    }
                                }]
                            });

                        }

                    }
                }
            });
        })

     
    </script>
</head>

<body class="easyui-layout">
    <div data-options="region:'north',split:true" style="height:80px;">
        <iframe src="top" width="99%" height="130px"></iframe>
    </div>

    <div data-options="region:'west',split:true" style="width:200px;">
        <ul id="tt"></ul>
    </div>

    <div data-options="region:'center'," style="padding: 5px; background: #eee;height:420px;">
        <div id="tabs" class="easyui-tabs" style="width:1160px;height:500px;">
        </div>
    </div>
</body>
</html>
