
@{
    Layout = null;
}
@{Entity.human_file ll = ViewBag.st; }

@{Entity.major_change aa = ViewBag.st2; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>detail</title>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css"></link>
    <script type="text/javascript">
        $(function () {
            //获取一级机构
            $.ajax({
                url: "/transfer/GetFirstKidDD",
                data: "",
                type: "get",
                success: function (data) {
                    var result = eval("(" + data + ")");
                    for (var i = 0; i < result.length; i++) {
                        $("#firstKindId").append('<option value=' + result[i].new_first_kind_id + '>' + result[i].new_first_kind_name + '</option>');
                    }
                    $("#firstKindId").change();
                }
            })
            //获取二级机构
            $("#firstKindId").change(function () {
                $.ajax({
                    url: "/transfer/GetSecondKidDD?id=" + $(this).val(),
                    data: "",
                    type: "get",
                    success: function (data) {
                        var result = eval("(" + data + ")");
                        for (var i = 0; i < result.length; i++) {
                            $("#secondKindId").append('<option value=' + result[i].new_second_kind_id + '>' + result[i].new_second_kind_name + '</option>');
                        }
                        $("#secondKindId").change();
                    }
                })
                //获取三级机构
                $("#secondKindId").change(function () {
                    $.ajax({
                        url: "/transfer/GetThirdKidDD?id=" + $(this).val(),
                        data: "",
                        type: "get",
                        success: function (data) {
                            var result = eval("(" + data + ")");
                            for (var i = 0; i < result.length; i++) {
                                $("#thirdKindId").append('<option value=' + result[i].new_third_kind_id + '>' + result[i].new_third_kind_name + '</option>');
                            }
                        }

                    })
                })
            })

        });
        $(function () {
            //获取新薪酬标准
            $.ajax({
                url: "/transfer/GetXinChou",
                data: "",
                type: "get",
                success: function (data) {
                    var result = eval("(" + data + ")");
                    for (var i = 0; i < result.length; i++) {
                        $("#newSalaryStandardId").append('<option value=' + result[i].standard_id + '>' + result[i].standard_name + '</option>');
                    }
                    $('#newSalaryStandardId').change();
                }
            })
            //获取新薪酬总额
            $("#newSalaryStandardId").change(function () {
                $.ajax({
                    url: "/transfer/GetXinChouMoney?id=" + $(this).val(),
                    data: "",
                    type: "get",
                    success: function (data) {
                        var result = eval("(" + data + ")");
                        for (var i = 0; i < result.length; i++) {
                            $("#newSalarySum").val(result[i].salary_sum);
                        }
                    }

                })
            })

        })
        $(function () {
            //获取新职位分类
            $.ajax({
                url: "/transfer/Getkind_name",
                data: "",
                type: "get",
                success: function (data) {
                    var result = eval("(" + data + ")");
                    for (var i = 0; i < result.length; i++) {
                        $("#newMajorKindId").append('<option value=' + result[i].new_major_kind_id + '>' + result[i].new_major_kind_name + '</option>');
                    }
                    $("#newMajorKindId").change();
                }
            })
            //获取新职位名称
            $("#newMajorKindId").change(function () {
                $.ajax({
                    url: "/transfer/Getmajor_name?id=" + $(this).val(),
                    data: "",
                    type: "get",
                    success: function (data) {
                        var result = eval("(" + data + ")");
                        for (var i = 0; i < result.length; i++) {
                            $("#newMajorId").append('<option value=' + result[i].new_major_id + '>' + result[i].new_major_name + '</option>');
                        }
                    }

                })
            })

        })
    </script>
</head>
<body>
    <form action="/transfer/detail" method="get">
    <table width="100%">
        <tr>
            <td>
                <font color="black">您正在做的业务是:人力资源--培训管理--调动登记查看</font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" class="BUTTON_STYLE1" onclick="javascript:window.history.back();" value="返回">
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr height="21">
            <td class="TD_STYLE1" width="8%">
                档案编号
            </td>
            <td class="TD_STYLE2" width="10%">
              @ll.human_id
            </td>
            <td class="TD_STYLE1" width="8%">
                姓名
            </td>
            <td class="TD_STYLE2" width="10%">
               @ll.human_name
            </td>
            <td class="TD_STYLE1" width="8%"></td>
            <td class="TD_STYLE2" width="10%"></td>
            <td class="TD_STYLE1" width="8%"></td>
            <td class="TD_STYLE2" width="10%"></td>
        </tr>
        <tr>
            <td class="TD_STYLE1" width="8%">
                原一级机构
            </td>
            <td class="TD_STYLE2">
              @ll.first_kind_name
            </td>
            <td class="TD_STYLE1" width="8%">
                原二级机构
            </td>
            <td class="TD_STYLE2" width="10%">
              @ll.second_kind_name
            </td>
            <td class="TD_STYLE1" width="8%">
                原三级机构
            </td>
            <td class="TD_STYLE2" width="10%"></td>
            <td class="TD_STYLE1" width="8%"></td>
            <td class="TD_STYLE2" width="10%"></td>
        </tr>

        <tr>
            <td class="TD_STYLE1">
                原职位分类
            </td>
            <td class="TD_STYLE2">
               @ll.human_major_kind_name
            </td>
            <td class="TD_STYLE1" width="12%">
                原职位名称
            </td>
            <td class="TD_STYLE2">
               @ll.hunma_major_name
            </td>
            <td class="TD_STYLE1">
                原薪酬标准
            </td>
            <td class="TD_STYLE2">
                @ll.salary_standard_name
            </td>
            <td class="TD_STYLE1">
                原薪酬总额
            </td>
            <td class="TD_STYLE2">
                @ll.salary_sum
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                新一级机构名称
            </td>
            <td class="TD_STYLE2">
                <select style="width:160px" name="new_first_kind_id" id="firstKindId" size="1" class="SELECT_STYLE2">   
                </select>

            </td>
            <td class="TD_STYLE1" width="12%">
                新二级机构名称
            </td>
            <td class="TD_STYLE2">
                <select style="width:160px" name="new_second_kind_id" id="secondKindId" size="1" class="SELECT_STYLE2">
                </select>
            </td>
            <td class="TD_STYLE1" width="12%">
                新三级机构名称
            </td>
            <td class="TD_STYLE2">
                <select style="width:160px" name="new_third_kind_id" id="thirdKindId" size="1" class="SELECT_STYLE2">
             
                </select>
            </td>
            <td class="TD_STYLE1" width="8%"></td>
            <td class="TD_STYLE2" width="10%"></td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                新职位分类
            </td>
            <td class="TD_STYLE2">
                <select name="mc.newMajorKindId" class="INPUT_STYLE2" id="newMajorKindId">
                    
                </select>
            </td>
            <td class="TD_STYLE1" width="12%">
                新职位名称
            </td>
            <td class="TD_STYLE2">
                <select name="mc.newMajorId" class="INPUT_STYLE2" id="newMajorId">
                 
                </select>
            </td>
            <td class="TD_STYLE1">
                新薪酬标准
            </td>
            <td class="TD_STYLE2">
                <select name="mc.newSalaryStandardId" class="INPUT_STYLE2" id="newSalaryStandardId">
                   
                </select>
            </td>
            <td class="TD_STYLE1">
                新薪酬总额
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="new_salary_sum" id="newSalarySum"
                       class="INPUT_STYLE2">
            </td>
            
        </tr>

        <tr>
            <td class="TD_STYLE1">
                登记人
            </td>
            <td class="TD_STYLE2">
               @ll.register
            </td>
            <td class="TD_STYLE1">
                登记时间
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="regist_time"
                       id="Tdate" class="INPUT_STYLE2">
                <SCRIPT type="text/javascript">
					function time(){
 					var tdate=document.getElementById("Tdate");
 					var d=new Date();
 					var y=d.getFullYear();
 					var moth=d.getMonth()+1;
 					var date=d.getDate();
 					var h=d.getHours();
 					var m=d.getMinutes();
 					var s=d.getSeconds();
					var hh=20-1-h;
					var mm=60-1-m;
					var ss=60-s;
					if(hh>0){
							mm=mm+60*hh;
					}
 					if(moth<10){
 							moth="0"+moth;
 					}
 					if(date<10){
 							date="0"+date;
 					}
 					if(h<10){
 							h="0"+h;
 					}
 					if(m<10){
 							m="0"+m;
 					}
 					if(s<10){
 							s="0"+s;
 					}
 					if(mm<10){
 							mm="0"+mm;
 					}
 					if(ss<10){
 							ss="0"+ss;
 					}

 					tdate.value=y+"-"+moth+"-"+date+"- "+h+":"+m+":"+s;


 				}
				window.onload=time;
 				var out=window.setInterval(time, 1000);
                </SCRIPT>
            </td>
            <td class="TD_STYLE1">
                复核人
            </td>
            <td class="TD_STYLE2">
              @ll.checker
            </td>
            <td class="TD_STYLE1">
                复核时间
            </td>
            <td class="TD_STYLE2">
                <input type="text" name="check_time"
                       id="check_time" class="INPUT_STYLE2">
                <SCRIPT type="text/javascript">
					function time(){
 					var tdate=document.getElementById("Tdate");
 					var d=new Date();
 					var y=d.getFullYear();
 					var moth=d.getMonth()+1;
 					var date=d.getDate();
 					var h=d.getHours();
 					var m=d.getMinutes();
 					var s=d.getSeconds();
					var hh=20-1-h;
					var mm=60-1-m;
					var ss=60-s;
					if(hh>0){
							mm=mm+60*hh;
					}
 					if(moth<10){
 							moth="0"+moth;
 					}
 					if(date<10){
 							date="0"+date;
 					}
 					if(h<10){
 							h="0"+h;
 					}
 					if(m<10){
 							m="0"+m;
 					}
 					if(s<10){
 							s="0"+s;
 					}
 					if(mm<10){
 							mm="0"+mm;
 					}
 					if(ss<10){
 							ss="0"+ss;
 					}
 					$("#check_time").val(y + "-" + moth + "-" + date + "- " + h + ":" + m + ":" + s);
 					tdate.value=y+"-"+moth+"-"+date+"- "+h+":"+m+":"+s;


 				}
				window.onload=time;
 				var out=window.setInterval(time, 1000);
                </SCRIPT>
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                调动原因
            </td>
            <td colspan="7" class="TD_STYLE2">
                <textarea name="majorChange.changeReason" rows="6" readonly="readonly" class="TEXTAREA_STYLE1">@aa.change_reason</textarea>
            </td>
        </tr>
    </table>
</form>
</body>
</html>
